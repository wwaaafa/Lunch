<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="设置"
        android:textColor="@color/theme_color"
        android:textStyle="bold" />
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_setting_center"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                app:rippleColor="@color/ripple_color"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/cardBackgroundColorNormal"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/icon_setting_center" />

                    <TextView
                        android:text="控制中心设置"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_app_list"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                app:rippleColor="@color/ripple_color"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/cardBackgroundColorNormal"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/icon_app_list" />

                    <TextView
                        android:text="应用列表设置"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_icon"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                app:rippleColor="@color/ripple_color"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/cardBackgroundColorNormal"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/icon_settings_icon" />

                    <TextView
                        android:text="图标设置"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_about"
                android:layout_height="52dp"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                app:rippleColor="@color/ripple_color"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/cardBackgroundColorNormal"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/icon_about" />

                    <TextView
                        android:text="关于"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:layout_gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
